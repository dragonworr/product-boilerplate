{
  "name": "server",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "apollo-server-micro": "^2.5.1",
    "graphql": "^14.3.1",
    "nexus": "^0.11.7",
    "nexus-prisma": "^0.3.7",
    "prisma": "^1.34.0"
  },
  "scripts": {
    "db": "(cd database && docker-compose up)",
    "db:deploy": "(cd database && prisma deploy)",
    "db:generate": "(cd database && prisma generate)",
    "postdb:generate": "yarn nexus:generate",
    "nexus:generate": "(cd database && nexus-prisma-generate --client ./database/generated/client --output ./database/generated/nexus-prisma)"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "nexus-prisma-generate": "^0.3.7"
  }
